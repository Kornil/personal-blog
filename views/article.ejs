<!DOCTYPE html>
<html lang="en">
  <head>
    
	<% include ./partials/head %>

  </head>

  <body>

    <% include ./partials/nav %>
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-offset-1 article">

          <h1 id="title"><%= article.title %></h1>
          <h4 id="log-subtitle">// <%= article.subtitle %></h4>          
          <img class="article-image" src="<%= article.image %>" />
          <h5> { author: "<span class="bolder"><%= article.author %></span>",<br>&nbsp;&nbsp;date: "<span class="bolder"><%= article.date %></span>" } </h5>
          <div id="article-text"></div>       
          <h5 id="log-end">/* end article */</h5>

        </div>
      </div>
    </div>

    <script>
    $(document).ready(function(){

      $("#article-text").html(
        marked( <%- JSON.stringify({content: article.text}) %>.content )
      )

    })

    </script>

  </body>
</html>